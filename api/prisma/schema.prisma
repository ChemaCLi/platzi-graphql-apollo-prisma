// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Attributes {
  id          Int      @id @default(autoincrement())
  description String?
  shape       String?
  hardiness   String?
  taste       String?
  avocado     Avocado?
}

model Avocado {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  name         String
  sku          String     @unique
  price        Float
  image        String
  attributes   Attributes @relation(fields: [attributesId], references: [id])
  attributesId Int
}
